{{#partial "content"}}
    <div class="form">
        <form action="/create/location/new" method="post">
            <h1>Create Location</h1>
            <hr>
            <div class="form-group">
                <label for="name">Location</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="name of location" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg">Create </button>
            </div>
        </form>
    </div>

{{/partial}}
